<div class="form-horizontal" role="form">
      <%= form_for(@message) do |f| %>
      <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  
    <div class="form-group">
      <label for="inputname" class="col-md-2 control-label">名前：</label>
        <div class="col-md-10">
          <%= f.text_field :name, class: "form-control" %>
        </div>
    </div>
  
    <div class="form-group">
      <label for="inputage" class="col-md-2 control-label">年齢：</label>
        <div class="col-md-10">
          <%= f.text_field :age, class: "form-control" %>
        </div>
    </div>
  
    <div class="form-group">
       <label for="inputbody" class="col-md-2 control-label">内容:</label>
         <div class="col-md-10">
          <%= f.text_area :body, class: "form-control" %>
        </div>
    </div>
    <div class="form-group"> 
      <div class="col-md-1">
        <%= f.submit class: "btn btn-sm btn-primary" %>
        <% end %>
      </div>
    </div>
</div>